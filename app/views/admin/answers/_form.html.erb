<%= form_with(model: model, local: true) do |form| %>
  <h3><span style="color:darkgreen">
        <%= answer_header(@question, @answer) %>
      </span>
  </h3>

<%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %>
    <%= form.text_field :body %><br>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :correct %>
  </p><br>

  <p><%= form.submit %></p><br>
<% end %>
