<%= form_with(model: model, local: true) do |form| %>
  <h5 style="color:darkgreen; padding: 0 0 0 50px ">
    <%= answer_header(@question, @answer) %>
  </h5>

	<%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %>
    <%= form.text_field :body %><br>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :correct %>
  </p><br>

  <p><%= form.submit %></p><br>
<% end %>
