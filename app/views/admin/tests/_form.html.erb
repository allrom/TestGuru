<%= form_with(model: model, local: true) do |form| %>
  <h5 style="color:blue; padding: 0 0 0 50px">
    <%= test_header(@test) %>
  </h5>

	<%= render 'shared/errors', resource: @test %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p><br>

  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all,
															 :id, :title,
															 { prompt: t('.category') },
															 { class: "form-select" } %>
  </p><br>

  <p>
    <%= form.label :level %>
    <%= form.number_field :level, max: 5 %>
  </p><br>

  <p><%= form.submit %></p><br>
<% end %>
